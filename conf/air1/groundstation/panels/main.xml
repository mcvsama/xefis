<?xml version='1.0'?>
<xefis-include>
	<!-- TODO
	bank angle limit

	master caution
	rth engage

	flap control (up, down)
	<widget ...rotary-encoder... toggle-property
	<widget ...rotary-selector... values='1 2 5 10 20 50 100'/>
	 -->
	<panel>
		<layout type='vertical' spacing='5'>
			<item>
				<group label='EICAS'>
					<layout type='horizontal' spacing='10'>
						<item>
							<layout type='vertical' spacing='10'>
								<item>
									<widget type='button' top-label='MASTER WARNING' click-property='/panels/main/eicas/button.master-warning'/>
								</item>
								<item>
									<widget type='button' top-label='MARKER' click-property='/panels/main/eicas/button.marker'/>
								</item>
							</layout>
						</item>
						<item>
							<layout type='vertical' spacing='10'>
								<item>
									<widget type='rotary-encoder' top-label='MSG' click-label='DEL' click-property='/panels/eicas-status/del' rotate-up-property='/panels/eicas-status/up' rotate-down-property='/panels/eicas-status/down'/>
								</item>
								<item>
									<widget type='button' top-label='RECALL' click-property='/panels/eicas-status/recall'/>
								</item>
								<item>
									<widget type='button' top-label='CLEAR' click-property='/panels/eicas-status/clear'/>
								</item>
							</layout>
						</item>
					</layout>
				</group>
			</item>
			<separator/>
			<item>
				<group label='LIGHTS'>
					<layout type='horizontal' spacing='10'>
						<item>
							<widget type='button' top-label='STRB' toggle-property='/settings/lights/strobe' led-property='/settings/lights/strobe' led-color='green'/>
						</item>
						<item>
							<widget type='button' top-label='POS' toggle-property='/settings/lights/position' led-property='/settings/lights/position' led-color='green'/>
						</item>
						<item>
							<widget type='button' top-label='LAND' toggle-property='/settings/lights/landing' led-property='/settings/lights/landing' led-color='green'/>
						</item>
						<stretch/>
					</layout>
				</group>
			</item>
			<separator/>
			<item>
				<group label='GPWS'>
					<layout type='horizontal' spacing='10'>
						<item>
							<widget type='button' top-label='ON' toggle-property='/settings/gpws/enabled' led-property='/settings/gpws/enabled' led-color='green'/>
						</item>
						<stretch/>
						<item>
							<widget type='button' top-label='FLAP INH.' toggle-property='/settings/gpws/flap-inhibit' led-property='/settings/gpws/flap-inhibit' led-color='amber'/>
						</item>
						<item>
							<widget type='button' top-label='GEAR INH.' toggle-property='/settings/gpws/gear-inhibit' led-property='/settings/gpws/gear-inhibit' led-color='amber'/>
						</item>
						<item>
							<widget type='button' top-label='TERR INH.' toggle-property='/settings/gpws/terrain-inhibit' led-property='/settings/gpws/terrain-inhibit' led-color='amber'/>
						</item>
					</layout>
				</group>
			</item>
			<item>
				<group label='TCAS'>
					<layout type='horizontal' spacing='10'>
						<item>
							<widget type='button' top-label='ON' toggle-property='/settings/tcas/on' led-property='/settings/tcas/on' led-color='green'/>
						</item>
						<stretch/>
					</layout>
				</group>
			</item>
			<item>
				<group label='PITOT'>
					<layout type='horizontal' spacing='10'>
						<item>
							<widget type='button' top-label='CAL' toggle-property='/' led-property='/' led-color='amber'/>
						</item>
						<stretch/>
					</layout>
				</group>
			</item>
			<item>
				<group label='AHRS'>
					<layout type='horizontal' spacing='10'>
						<item>
							<widget type='button' top-label='ALIGN' toggle-property='/' led-property='/' led-color='amber'/>
						</item>
						<stretch/>
					</layout>
				</group>
			</item>
			<stretch/>
		</layout>
	</panel>
</xefis-include>

