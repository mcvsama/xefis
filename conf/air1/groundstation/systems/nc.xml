<?xml version='1.0'?>
<xefis-include>
	<module name='systems/nc'>
		<properties>
			<!-- Input -->
			<property name='position.input.longitude' path='/sensors/gps/longitude'/>
			<property name='position.input.latitude' path='/sensors/gps/latitude'/>
			<property name='position.input.altitude.amsl' path='/sensors/gps/altitude-amsl'/>
			<property name='position.input.accuracy.lateral' path='/sensors/gps/accuracy.lateral' default='1 m'/>
			<property name='position.input.accuracy.vertical' path='/sensors/gps/accuracy.vertical' default='1 m'/>
			<property name='position.input.source' path='/sensors/gps/source'/>
			<property name='orientation.input.pitch' path='/sensors/ahrs/orientation/pitch'/>
			<property name='orientation.input.roll' path='/sensors/ahrs/orientation/roll'/>
			<property name='orientation.input.heading.magnetic' path='/sensors/ahrs/orientation/magnetic-heading'/>
			<!-- Output -->
			<directory path='/systems/nc'>
				<property name='position.longitude' path='/position/longitude'/>
				<property name='position.latitude' path='/position/latitude'/>
				<property name='position.altitude.amsl' path='/position/altitude.amsl'/>
				<property name='position.accuracy.lateral' path='/position/accuracy.lateral'/>
				<property name='position.accuracy.vertical' path='/position/accuracy.vertical'/>
				<property name='position.source' path='/position/source'/>
				<property name='orientation.pitch' path='/orientation/pitch'/>
				<property name='orientation.roll' path='/orientation/roll'/>
				<property name='orientation.heading.magnetic' path='/orientation/heading/magnetic'/>
				<property name='orientation.heading.true' path='/orientation/heading/true'/>
				<property name='track.vertical' path='/track/vertical'/>
				<property name='track.lateral.magnetic' path='/track/lateral/magnetic'/>
				<property name='track.lateral.true' path='/track/lateral/true'/>
				<property name='track.lateral.delta' path='/track/lateral/delta'/>
				<property name='track.ground-speed' path='/track/ground-speed'/>
				<property name='magnetic.declination' path='/magnetic/declination'/>
				<property name='magnetic.inclination' path='/magnetic/inclination'/>
			</directory>
		</properties>
	</module>
</xefis-include>

