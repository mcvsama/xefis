<?xml version='1.0'?>
<xefis-include>
	<module name='io/flightgear'>
		<input disabled='false'>
			<host>0.0.0.0</host>
			<port>9000</port>
			<properties>
				<directory path='/sensors'>
					<!-- aoa -->
					<property name='aoa.alpha.maximum' path='/aoa/alpha.maximum'/>
					<property name='aoa.alpha.minimum' path='/aoa/alpha.minimum'/>
					<property name='aoa.alpha' path='/aoa/alpha'/>
					<!-- gps -->
					<property name='gps.longitude' path='/gps/longitude'/>
					<property name='gps.latitude' path='/gps/latitude'/>
					<property name='gps.amsl' path='/gps/altitude-amsl'/>
					<property name='gps.accuracy.lateral' path='/gps/accuracy.lateral'/>
					<property name='gps.accuracy.vertical' path='/gps/accuracy.vertical'/>
					<property name='gps.serviceable' path='/gps/serviceable'/>
					<property name='gps.source' path='/gps/source'/>
					<!-- ahrs -->
					<property name='ahrs.serviceable' path='/ahrs/serviceable'/>
					<property name='ahrs.pitch' path='/ahrs/orientation/pitch'/>
					<property name='ahrs.roll' path='/ahrs/orientation/roll'/>
					<property name='ahrs.magnetic-heading' path='/ahrs/orientation/magnetic-heading'/>
					<!-- airspeed -->
					<property name='ias' path='/airspeed/ias'/>
					<property name='ias.serviceable' path='/airspeed/serviceable'/>
					<!-- pressure -->
					<property name='pressure' path='/pressure/static'/>
					<property name='pressure.serviceable' path='/pressure/serviceable'/>
					<!-- temperature -->
					<property name='total-air-temperature' path='/air-temperature/total'/>
					<!-- radar altimeter -->
					<property name='radar-altimeter.altitude.agl' path='/radar-altimeter/altitude.agl'/>
					<property name='radar-altimeter.serviceable' path='/radar-altimeter/serviceable'/>
					<!-- slip-skid -->
					<property name='slip-skid' path='/slip-skid/slip-skid'/>
					<!-- engines -->
					<property name='engine.1.thrust' path='/engines/1/thrust'/>
					<property name='engine.1.rpm' path='/engines/1/rpm'/>
					<property name='engine.1.n1' path='/engines/1/n1'/>
					<property name='engine.1.n2' path='/engines/1/n2'/>
					<property name='engine.1.egt' path='/engines/1/temperature'/>
					<property name='engine.1.epr' path='/engines/1/epr'/>
					<property name='engine.1.pitch' path='/engines/1/pitch'/>
					<property name='engine.2.thrust' path='/engines/2/thrust'/>
					<property name='engine.2.rpm' path='/engines/2/rpm'/>
					<property name='engine.2.n1' path='/engines/2/n1'/>
					<property name='engine.2.n2' path='/engines/2/n2'/>
					<property name='engine.2.egt' path='/engines/2/temperature'/>
					<property name='engine.2.epr' path='/engines/2/epr'/>
					<property name='engine.2.pitch' path='/engines/2/pitch'/>
					<!-- gear -->
					<property name='gear.setting.down' path='/gear/setting.down'/>
					<property name='gear.nose.up' path='/gear/nose.up'/>
					<property name='gear.nose.down' path='/gear/nose.down'/>
					<property name='gear.left.up' path='/gear/left.up'/>
					<property name='gear.left.down' path='/gear/left.down'/>
					<property name='gear.right.up' path='/gear/right.up'/>
					<property name='gear.right.down' path='/gear/right.down'/>
				</directory>
				<directory path='/sensors/flightgear-other'>
					<property name='gs' path='/speed/ground-speed'/>
					<property name='tas' path='/speed/true-airspeed'/>
					<property name='mach' path='/speed/mach'/>
					<property name='wind-from-mag-heading' path='/wind/magnetic-orientation'/>
					<property name='wind-tas' path='/wind/speed'/>
					<property name='flight-path-marker-alpha' path='/flight-path/alpha'/>
					<property name='flight-path-marker-beta' path='/flight-path/beta'/>
					<property name='magnetic-track' path='/flight-path/magnetic-track'/>
					<property name='cbr' path='/altitude/vertical-speed'/>
					<property name='altitude' path='/altitude/amsl'/>
					<property name='ahrs.true-heading' path='/orientation/true-heading'/>
					<property name='ias-minimum' path='/speed/ias-minimum'/>
					<property name='ias-maximum' path='/speed/ias-maximum'/>
					<property name='ias-lookahead' path='/speed/ias-lookahead'/>
					<property name='dme-distance' path='/localizer/distance'/>
					<property name='vertical-deviation' path='/localizer/vertical-deviation'/>
					<property name='lateral-deviation' path='/localizer/lateral-deviation'/>
					<property name='cmd-setting-altitude' path='/cmd-altitude'/>
					<property name='cmd-setting-heading' path='/cmd-magnetic-heading-and-track'/>
					<property name='cmd-setting-cbr' path='/cmd-vertical-speed'/>
					<property name='cmd-setting-ias' path='/cmd-ias'/>
				</directory>
			</properties>
		</input>
		<output disabled='false'>
			<host>127.0.0.1</host>
			<port>9001</port>
			<properties path='/systems/fbw'>
				<property name='ailerons' path='/ailerons'/>
				<property name='elevator' path='/elevator'/>
				<property name='throttle.1' path='/throttle'/>
				<property name='throttle.2' path='/throttle'/>
				<property name='rudder' path='//input/pedals'/>
			</properties>
		</output>
	</module>
</xefis-include>

